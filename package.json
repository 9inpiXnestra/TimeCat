{
    "private": true,
    "name": "timecat",
    "author": "oct16",
    "version": "1.2.0-alpha.20",
    "description": "TimeCat Web Recorder",
    "keywords": [
        "recorder",
        "replay",
        "player",
        "virtual-dom",
        "screenshots",
        "audio",
        "video",
        "chrome",
        "chrome-extension"
    ],
    "license": "GPL-3.0-or-later",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "node scripts/dev.js",
        "build": "node scripts/build.js",
        "release": "node scripts/release.js",
        "preinstall": "$npm_execpath --silent run checkyarn",
        "checkyarn": "node ./scripts/checkYarn.js",
        "ls-lint": "ls-lint",
        "lint": "eslint 'packages/**/*.{js,ts}' --quiet --fix",
        "test:unit": "jest --forceExit --detectOpenHandles --coverage --verbose",
        "live": "node scripts/live.js",
        "embed": "cp packages/timecat/dist/timecat.global.prod.js ../TimeCatChrome/src/assets/",
        "gh": "node scripts/gh.js",
        "count": "git ls-files --exclude-standard -- ':!:**/*.[pjs][npv]g' ':!:.eslintrc' ':!: examples/*' ':!:.gitignore' ':!:README.*' ':!:LICENSE' ':!:yarn.lock' | xargs wc -l"
    },
    "husky": {
        "hooks": {
            "pre-commit": "ls-lint && lint-staged",
            "commit-msg": "node ./scripts/verifyCommit.js"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write"
        ],
        "*.ts?(x)": [
            "eslint",
            "prettier --parser=typescript --write"
        ]
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "devDependencies": {
        "@ls-lint/ls-lint": "^1.9.2",
        "@microsoft/api-extractor": "^7.13.1",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-html": "^0.2.3",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@rollup/plugin-replace": "^2.3.4",
        "@types/diff": "^5.0.0",
        "@types/fingerprintjs2": "^2.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.28",
        "@types/smoothscroll-polyfill": "^0.3.1",
        "@types/tapable": "^1.0.6",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "brick.json": "^0.0.6",
        "brotli": "^1.3.2",
        "browser-sync": "^2.26.14",
        "chalk": "^4.1.0",
        "diff": "^5.0.0",
        "enquirer": "^2.3.6",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "execa": "^5.0.0",
        "fake-indexeddb": "3.1.2",
        "fingerprintjs2": "^2.1.2",
        "fs-extra": "^9.1.0",
        "husky": "4.3.8",
        "is-mobile": "^2.2.2",
        "jest": "^26.6.3",
        "jest-canvas-mock": "^2.3.1",
        "koa": "^2.13.1",
        "lint-staged": "^10.5.4",
        "minimist": "^1.2.5",
        "prettier": "^2.2.1",
        "rollup": "^2.39.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "rollup-plugin-scss": "^2.6.1",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.29.0",
        "rollup-plugin-visualizer": "^4.2.0",
        "semver": "^7.3.4",
        "smoothscroll-polyfill": "^0.4.4",
        "tapable": "^1.1.3",
        "ts-jest": "^26.5.1",
        "typescript": "^4.1.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oct16/TimeCat.git"
    },
    "bugs": {
        "url": "https://github.com/oct16/TimeCat/issues"
    },
    "homepage": "https://github.com/oct16/TimeCat#readme"
}
