{
    "name": "WebReplay Chrome",
    "manifest_version": 2,
    "description": "WebReplay Chrome",
    "version": "1.3",
    "background": {
        "scripts": [
            "replay-chrome-background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "name": "~~~~~",
        "default_icon": "record-icon-black.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "replay.min.js",
                "replay-chrome-content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "replay.min.js"
    ]
}
