{
    "manifest_version": 2,
    "name": "WebReplay-Chrome",
    "description": "",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "replay-chrome-background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "replay.min.js",
                "replay-chrome-content.js"
            ]
        }
    ]
}
